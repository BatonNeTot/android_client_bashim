<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <solid android:color="@color/backgroundLight"/>

            <stroke
                android:color="@color/backgroundTextStrokeLight"
                android:width="@dimen/quote_text_background_stroke_width"
                android:dashGap="@dimen/quote_text_background_stroke_dash_gap"
                android:dashWidth="@dimen/quote_text_background_stroke_dash_width"/>

            <padding
                android:bottom="-6dp"
                android:left="0dp"
                android:right="6dp"
                android:top="-6dp" />
        </shape></item>
        <item ><bitmap android:gravity="bottom|right" android:src="@drawable/down_arrow_dark" />
        </item>
    </layer-list></item>

</selector>