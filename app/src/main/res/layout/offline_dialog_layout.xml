<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/settings_margin"

        android:layout_marginStart="@dimen/settings_margin"
        android:layout_marginLeft="@dimen/settings_margin"

        android:layout_marginEnd="@dimen/settings_margin"
        android:layout_marginRight="@dimen/settings_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/countText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            style="@style/RegularText"
            android:textSize="@dimen/settings_text_size"
            android:inputType="number"/>

    </android.support.design.widget.TextInputLayout>


</FrameLayout>